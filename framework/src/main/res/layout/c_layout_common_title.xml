<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/c_layout_title"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingStart="5dp"
    android:paddingEnd="10dp">

    <ImageButton
        android:id="@+id/c_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="@null"
        android:padding="10dp"
        android:src="@drawable/c_ic_nav_back_black" />

    <TextView
        android:id="@+id/c_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/color_3"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="标题" />

    <TextView
        android:id="@+id/c_tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/c_tv_title"
        android:layout_alignParentEnd="true"
        android:padding="5dp"
        android:textColor="@color/color_3"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="操作"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/c_btn_right"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:scaleType="center"
        android:visibility="gone"
        tools:src="@drawable/c_ic_nav_close_black"
        tools:visibility="visible" />

    <View
        android:id="@+id/c_v_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_e"
        android:visibility="gone"
        tools:visibility="visible" />

</RelativeLayout>